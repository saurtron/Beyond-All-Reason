/* === Standard Backgrounds === */
.bg-blue-500 { background-color: #3b82f6; }
.bg-blue-300 { background-color: #93c5fd; }
.bg-indigo-500 { background-color: #6366f1; }
.bg-gray-200 { background-color: #e5e7eb; }
.bg-gray-100 { background-color: #f9fafb; }

/* === Status Colors === */
.bg-green-500 { background-color: #22c55e; } /* Success */
.bg-yellow-500 { background-color: #f59e0b; } /* Warning */
.bg-red-500 { background-color: #ef4444; } /* Danger/Error */
.bg-cyan-500 { background-color: #06b6d4; } /* Info */
.bg-teal-500 { background-color: #14b8a6; } /* Confirm */

/* === Text Colors === */
